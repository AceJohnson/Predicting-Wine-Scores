   "source": [
    "#First 12 rows for the top/significant country value counts\n",
    "USA_taster = list(USA_wine.taster_name.value_counts()[:6].index)\n",
    "def taster_to_simple(x,taster_name):\n",
    "    if x in taster_name:\n",
    "        return x\n",
    "    else: \n",
    "        return 'Other'\n",
    "USA_wine['taster_simple'] = USA_wine.taster_name.apply(lambda x: taster_to_simple(x,taster_name))\n",
    "dummy_taster = pd.get_dummies(USA_wine.taster_simple,prefix = 'taster_')"
   ]
  },
